
import matplotlib.pyplot as plt
import time
def plot_and_get_click():
    # create some sample data
    x = [1, 2, 3, 4, 5]
    y = [2, 4, 6, 8, 10]
    
    # plot the data
    plt.plot(x, y)
    
    # wait for user to click on the plot
    clicked_points = plt.ginput(n=-1, show_clicks=True)
    
    # close the plot window
    plt.close()
    
    # return the clicked point positions
    return clicked_points

# call the function to plot the graph and get the clicked point positions
clicked_points = plot_and_get_click()

time.sleep(10)
# print the clicked point positions
print("Clicked point positions:", clicked_points)
